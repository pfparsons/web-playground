{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://localhost:3000/schema/attribute.json",
    "title": "Attribute",
    "description": "A schema for defining an Attribute",
    "type": "object",
    "properties": {
        "$id": {
            "type": "string",
            "format": "uri-reference"
        },
        "lowerCamelCaseName": {
            "type": "string",
            "pattern": "^[a-z]+([A-Z0-9][a-z0-9]+)*([A-Z])?"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
        },
        "description": {
            "type": "string"
        }
    }
}