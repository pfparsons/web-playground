{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "entity.json",
    "title": "Entity",
    "description": "A schema for defining an Attribute",
    "type": "object",
    "properties": {
        "$id": {
            "type": "string",
            "format": "uri-reference"
        },
        "lowerCamelCaseName": {
            "type": "string"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
        },
        "description": {
            "type": "string"
        },
        "attributes": {
            "type": "object",
            "additionalProperties": {
            "$ref": "attribute.json"
            }
        }
    }
}